<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="17dp"
    android:background="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_event_item"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mock_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedSquare" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#FFF2EC"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="@id/iv_event_item"
            app:layout_constraintTop_toTopOf="@id/iv_event_item">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_event_item_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:fontFamily="@font/noto_sans_bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_event_item_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="Sep"
                    android:textColor="#6F747C"
                    android:textSize="8sp"
                    app:fontFamily="@font/noto_sans" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="12dp"
            android:paddingTop="15dp"
            android:paddingEnd="12dp"
            android:paddingBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_event_item"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_event_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Self improving stories: A Amazing Workshop"
                android:textColor="#111827"
                android:textSize="14sp"
                app:fontFamily="@font/noto_sans_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_event_item_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="California"
                    android:textColor="#6F747C"
                    android:textSize="12sp"
                    app:fontFamily="@font/noto_sans"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView64"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="â€¢"
                    android:textColor="#EB683A"
                    android:textSize="12sp"
                    app:fontFamily="@font/noto_sans_bold"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_event_item_city"
                    app:layout_constraintStart_toEndOf="@+id/tv_event_item_city"
                    app:layout_constraintTop_toTopOf="@+id/tv_event_item_city" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_event_item_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="10:00 PM"
                    android:textColor="#6F747C"
                    android:textSize="12sp"
                    app:fontFamily="@font/noto_sans"
                    app:layout_constraintBottom_toBottomOf="@+id/materialTextView64"
                    app:layout_constraintStart_toEndOf="@+id/materialTextView64"
                    app:layout_constraintTop_toTopOf="@+id/materialTextView64" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:clickable="false"
                    android:fontFamily="@font/noto_medium"
                    android:includeFontPadding="false"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:letterSpacing="0"
                    android:minWidth="64dp"
                    android:text="FREE"
                    android:textAllCaps="false"
                    android:textColor="#EB683A"
                    android:textSize="12sp"
                    app:backgroundTint="#FFF2EC"
                    app:cornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>