<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Amsi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="colorPrimary">#E6511C</item>
        <item name="colorPrimaryVariant">#E6511C</item>
        <item name="colorOnPrimary">#E6511C</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E6511C</item>
        <item name="colorSecondaryVariant">#E6511C</item>
        <item name="colorOnSecondary">#E6511C</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
        <item name="android:textViewStyle">@style/NoFontPaddingTextView</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>
</resources>